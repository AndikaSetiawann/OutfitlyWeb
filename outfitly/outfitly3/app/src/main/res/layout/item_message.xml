<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- User Message -->
    <TextView
        android:id="@+id/userMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_user_message"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="end"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp"
        android:maxWidth="300dp"
        android:visibility="gone"
        android:textSize="16sp"
        android:elevation="2dp"
        android:backgroundTint="#4CAF50" />

    <!-- Bot Message Layout -->
    <LinearLayout
        android:id="@+id/botMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bot_message"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="4dp"
        android:maxWidth="300dp"
        android:visibility="gone"
        android:backgroundTint="#EEEEEE">

        <TextView
            android:id="@+id/botMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/botImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="#CCCCCC"
            android:contentDescription="Bot image" />

        <TextView
            android:id="@+id/shopLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat di Shopee"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Quick Replies Layout (Flexbox) -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/quickRepliesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:flexWrap="wrap"
        app:justifyContent="flex_start" />

</LinearLayout>
